{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/config/*": ["config/*"],
      "@/main/*": ["src/main/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/components/*": ["src/renderer/components/*"],
      "@/styles/*": ["src/renderer/styles/*"],
      "@/views/*": ["src/renderer/views/*"]
    }
  },
  "include": ["src/**/*", "config", "src/types"]
}
